<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/winLottoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="당첨번호"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="86dp" />

    <LinearLayout
        android:id="@+id/winLottosList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/winLottoText"
        android:layout_marginTop="30dp">

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball1"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball2"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball3"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball4"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball5"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball6"
            android:text="21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="+"/>

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball7"
            android:text="21" />

    </LinearLayout>

    <TextView
        android:id="@+id/resultMsgText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/winLottosList"
        android:layout_marginTop="30dp"
        android:text="축하멘트 \n 블라블라"
        android:textSize="20dp"
        android:background="#F5F5F5"
        android:padding="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/myLottoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/resultMsgText"
        android:layout_marginTop="30dp"
        android:text="내 로또"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="86dp" />

    <ListView
        android:id="@+id/myLottoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/myLottoText"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>