<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/winLottoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="당첨번호"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:id="@+id/winLottosList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/winLottoText"
        android:layout_marginTop="30dp">

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball1"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball2"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball3"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball4"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball5"
            android:text="21" />

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ball6"
            android:text="21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="+"/>

        <include
            layout="@layout/lotto_ball"
            android:id="@+id/ballBonus"
            android:text="21" />

    </LinearLayout>

    <TextView
        android:id="@+id/resultMsgText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/winLottosList"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="20dp"
        android:background="#F5F5F5"
        android:padding="15dp" />

    <TextView
        android:id="@+id/myLottoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/resultMsgText"
        android:layout_marginTop="30dp"
        android:text="내 로또"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/myLottosList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/myLottoText"
        android:layout_marginTop="30dp">
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_radius"
        android:backgroundTint="@null"
        android:padding="0dp"
        android:text="종료"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/myLottosList"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>